<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= @user.email %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @user.questions.any? %>
      <h3>Questions (<%= @user.questions.count %>) </h3>
      <ol class="questions">
        <%= render @user.questions %>
      </ol>
      <%= will_paginate @user.questions %>
    <% end %>
  </div>
</div>